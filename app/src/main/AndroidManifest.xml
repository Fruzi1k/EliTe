<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.elite">

    <!-- Разрешения для работы с интернетом и Firebase -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        tools:targetApi="31">

        <!-- Экран регистрации -->
        <activity
            android:name=".auth.Registration"
            android:exported="false" />

        <!-- Экран логина -->
        <activity
            android:name=".auth.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Главная активити после входа -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Профиль пользователя -->
        <activity
            android:name=".profile.Profile"
            android:exported="true" />

        <!-- Активности по ролям -->
        <activity
            android:name=".work.WorkerActivity"
            android:exported="true" />
        <activity
            android:name=".work.DirectorActivity"
            android:exported="true" />
        <activity
            android:name=".work.BuildingDetailActivity"
            android:exported="true" />
        <activity
            android:name=".workhours.WorkHourActivity"
            android:exported="true" />
        <activity
            android:name=".work.BuildingActivity"
            android:exported="true" />
        <activity
            android:name=".workhours.HoursFragmentDirector"
            android:exported="true" />
        <activity
            android:name=".workhours.HoursFragmentWorker"
            android:exported="true" />
        <activity
            android:name=".apps.AppsActivity"
            android:exported="true" />

    </application>

</manifest>
